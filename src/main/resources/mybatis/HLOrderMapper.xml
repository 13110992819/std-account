<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.account.dao.IHLOrderDAO">
	<resultMap id="hlOrder_DB_Result" type="hlOrder">
		<result column="code" property="code" />
		<result column="direction" property="direction" />
		<result column="amount" property="amount" />
		<result column="status" property="status" />
		<result column="apply_user" property="applyUser" />	
		
		<result column="mobile" property="mobile" />	
		<result column="apply_note" property="applyNote" />		
		<result column="apply_datetime" property="applyDatetime" />	
		<result column="approve_user" property="approveUser" />	
		<result column="approve_note" property="approveNote" />	
			
		<result column="approve_datetime" property="approveDatetime" />		
		<result column="account_number" property="accountNumber" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="direction != null and direction != '' ">
				AND t.direction = #{direction}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>	
			
			<if test="applyUser != null and applyUser != '' ">
				AND t.apply_user = #{applyUser}
			</if>
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>	
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>		
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.apply_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.apply_datetime <= #{createDatetimeEnd}]]>
			</if>		
			<if test="mobileForLikeQuery != null and mobileForLikeQuery != '' ">
				AND tu.mobile like "%"#{mobileForLikeQuery}"%"
			</if>	
		</trim>
	</sql>
	<select id="select_hlOrder" parameterType="hlOrder" resultMap="hlOrder_DB_Result">
		SELECT 
		t.code
	    ,t.direction
	    ,t.amount
		,t.status
		,t.apply_user	
		
		,t.apply_note
		,t.apply_datetime
		,t.approve_user
		,t.approve_note
		,t.approve_datetime
		
		,t.account_number
		,tu.mobile
		FROM
		tstd_hlorder t INNER JOIN tstd_account ta ON t.account_number = ta.account_number INNER JOIN ${userDB}.tstd_user tu ON ta.user_id = tu.user_id
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_hlOrder_count" parameterType="hlOrder" resultType="java.lang.Long">
		SELECT count(1) FROM tstd_hlorder t INNER JOIN tstd_account ta ON t.account_number = ta.account_number INNER JOIN ${userDB}.tstd_user tu ON ta.user_id = tu.user_id
		<include refid="where_condition"/>
	</select>

	<insert id="insert_hlOrder" parameterType="hlOrder">
		INSERT INTO tstd_hlorder(
		code
		,direction
		,amount
		,status
		,apply_user
		
		,apply_note
		,apply_datetime			
		,account_number	
		)
		VALUES(
		#{code}
		,#{direction}
		,#{amount}
		,#{status}
		,#{applyUser}
		
		,#{applyNote}
		,#{applyDatetime}
		,#{accountNumber}
		)
	</insert>

	<update id="update_approve_order" parameterType="hlOrder">
		UPDATE tstd_hlorder
		SET
		status= #{status}
		,approve_user= #{approveUser}
		,approve_note= #{approveNote}
		,approve_datetime= #{approveDatetime}
		WHERE
		code = #{code}			
	</update>
</mapper>
