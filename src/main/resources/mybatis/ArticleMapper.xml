<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.account.cms.dao.IArticleDAO">
	<resultMap type="article" id="article_DB_Result">
		<result column="code" property="code"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="parent_code" property="parentCode"/>
		<result column="art_url" property="artUrl"/>
		<result column="status" property="status"/>
		<result column="order_no" property="orderNo"/>
		<result column="creator" property="creator"/>
		<result column="create_datetime" property="createDatetime"/>
		<result column="updater" property="updater"/>
		<result column="update_datetime" property="updateDatetime"/>
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != ''">
				AND t.code = #{code}
			</if>
			<if test="title != null and title != ''">
				AND t.title = #{title}
			</if>
			<if test="parentCode != null and parentCode != ''">
				AND t.parent_code = #{parentCode}
			</if>
			<if test="status != null and status != ''">
				AND t.status = #{status}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != ''">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != ''">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
		</trim>
	</sql>
	<select id="select_article" parameterType="article" resultMap="article_DB_Result">
		SELECT 
		code
		,title
		,content
		,parent_code
		,art_url
		,status
		,order_no
		,creator
		,create_datetime
		,updater
		,update_datetime
		FROM tcms_article t
		<include refid="where_condition"></include>
		<trim prefix="ORDER BY">
			<if test="order != null and order != ''">
				${order}
			</if>
		</trim>
	</select>
	
	<select id="select_article_list" parameterType="article" resultMap="article_DB_Result">
		SELECT 
		code
		,title
		,parent_code
		,art_url
		,status
		,order_no
		,creator
		,create_datetime
		,updater
		,update_datetime
		FROM tcms_article t
		<include refid="where_condition"></include>
		<trim prefix="ORDER BY">
			<if test="order != null and order != ''">
				${order}
			</if>
		</trim>
	</select>
	
	<select id="select_count_article" parameterType="article" resultType="java.lang.Long">
		SELECT count(1) FROM tcms_article t
		<include refid="where_condition"></include>
	</select>
	
	<insert id="insert_article" parameterType="article" >
		INSERT INTO tcms_article(
		code
		,title
		,content
		,parent_code
		,art_url
		,status
		,order_no
		,creator
		,create_datetime
		)
		VALUES(
		#{code}
		,#{title}
		,#{content}
		,#{parentCode}
		,#{artUrl}
		,#{status}
		,#{orderNo}
		,#{creator}
		,#{createDatetime}
		)
	</insert>
	
	<delete id="delete_article" parameterType="article">
		DELETE FROM tcms_article WHERE code=#{code}
	</delete>
	
	<update id="update_article" parameterType="article">
		UPDATE tcms_article 
		set 
		title=#{title}
		,content=#{content}
		,parent_code=#{parentCode}
		,art_url=#{artUrl}
		,order_no=#{orderNo}
		,updater=#{updater}
		,update_datetime=#{updateDatetime}
		WHERE code=#{code}
	</update>
	
	<update id="update_article_status" parameterType="article">
		UPDATE tcms_article
		set
		status=#{status}
		,updater=#{updater}
		,update_datetime=#{updateDatetime}
		WHERE code=#{code}
	</update>
</mapper>