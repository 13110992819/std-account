<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.account.dao.ICQOrderDAO">
	<resultMap id="cqOrder_DB_Result" type="cqOrder">
		<result column="cq_no" property="cqNo" />
		<result column="status" property="status" />
		<result column="direction" property="direction" />
		<result column="channel" property="channel" />
		<result column="amount" property="amount" />

		<result column="bank_code" property="bankCode" />	
		<result column="subbranch" property="subbranch" />		
		<result column="bankcard_no" property="bankcardNo" />
		<result column="create_datetime" property="createDatetime" />	
		<result column="approve_user" property="approveUser" />	
		<result column="approve_datetime" property="approveDatetime" />			
		
		<result column="pay_user" property="payUser" />	
		<result column="pay_datetime" property="payDatetime" />				
		<result column="pay_no" property="payNo" />		
		<result column="pay_fee" property="payFee" />			
		<result column="work_date" property="workDate" />
			
		<result column="check_user" property="checkUser" />	
		<result column="check_datetime" property="checkDatetime" />		
		<result column="remark" property="remark" />		
		<result column="account_number" property="accountNumber" />
		<result column="mobile" property="mobile" />
		<result column="real_name" property="realName" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="cqNo != null and cqNo != '' ">
				AND t.cq_no = #{cqNo}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>	
			<if test="direction != null and direction != '' ">
				AND t.direction = #{direction}
			</if>	
			<if test="channel != null and channel != '' ">
				AND t.channel = #{channel}
			</if>	
			<if test="bankCode != null and bankCode != '' ">
				AND t.bank_code = #{bankCode}
			</if>
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>
			<if test="payUser != null and payUser != '' ">
				AND t.pay_user = #{payUser}
			</if>
			<if test="checkUser != null and checkUser != '' ">
				AND t.check_user = #{checkUser}
			</if>
			<if test="workDate != null and workDate != '' ">
				AND t.work_date = #{workDate}
			</if>
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
			<if test="mobile != null and mobile != '' ">
				AND tu.mobile = #{mobile}
			</if>
			<if test="realName != null and realName != '' ">
				AND tu.real_name = #{realName}
			</if>				
		</trim>
	</sql>
	<select id="select_cqOrder" parameterType="cqOrder" resultMap="cqOrder_DB_Result">
		SELECT 
		t.cq_no
		,t.status
		,t.direction
		,t.channel
		,t.amount

		,t.bank_code	
		,t.subbranch
		,t.bankcard_no
		,t.create_datetime
		,t.approve_user
		,t.approve_datetime
		
		,t.pay_user
		,t.pay_datetime			
		,t.pay_no
		,t.pay_fee	
		,t.work_date
			
		,t.check_user
		,t.check_datetime	
		,t.remark
		,t.account_number
		,tu.mobile
		,tu.real_name
		FROM
		tli_cqorder t inner join tli_account ta on t.account_number = ta.account_number inner join tpz_user tu on ta.user_id = tu.user_id
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_cqOrder_count" parameterType="cqOrder" resultType="java.lang.Long">
		SELECT count(1) FROM tli_cqorder t inner join tli_account ta on t.account_number = ta.account_number inner join tpz_user tu on ta.user_id = tu.user_id
		<include refid="where_condition"/>
	</select>

	<insert id="insert_cqOrder" parameterType="cqOrder">
		INSERT INTO tli_cqorder(
		cq_no
		,status
		,direction
		,channel
		,amount
		
		,bank_code
		,subbranch
		,bankcard_no
		,create_datetime		
		,remark		
		,account_number	
		)
		VALUES(
		#{cqNo}
		,#{status}
		,#{direction}
		,#{channel}
		,#{amount}
		
		,#{bankCode}
		,#{subbranch}
		,#{bankcardNo}
		,#{createDatetime}
		,#{remark}		
		,#{accountNumber}
		)
	</insert>
	
	<insert id="insert_chargeOrderYeepay" parameterType="cqOrder">
		INSERT INTO tli_cqorder(
		cq_no
		,status
		,direction
		,channel
		,amount
		
		,bank_code
		,bankcard_no
		,create_datetime		
		,remark	
		,pay_fee		
		
		,account_number	
		)
		VALUES(
		#{cqNo}
		,#{status}
		,#{direction}
		,#{channel}
		,#{amount}
		
		,#{bankCode}
		,#{bankcardNo}
		,#{createDatetime}
		,#{remark}		
		,#{payFee}		
		
		,#{accountNumber}
		)
	</insert>

	<update id="update_approve_order" parameterType="cqOrder">
		UPDATE tli_cqorder
		SET
		status= #{status}
		,approve_user= #{approveUser}
		,approve_datetime= #{approveDatetime}		
		,remark= #{remark}
		WHERE
		cq_no = #{cqNo}			
	</update>
	
	<update id="update_pay_order" parameterType="cqOrder">
		UPDATE tli_cqorder
		SET
		status= #{status}
		,pay_user= #{payUser}
		,pay_datetime= #{payDatetime}
		,pay_no= #{payNo}		
		,pay_fee= #{payFee}
		
		,remark= #{remark}		
		,work_date= #{workDate}
		WHERE
		cq_no = #{cqNo}				
	</update>
	
	<update id="update_check_order" parameterType="cqOrder">
		UPDATE tli_cqorder
		SET
		status= #{status}
		,check_user= #{checkUser}
		,check_datetime= #{checkDatetime}
		,remark= #{remark}
		WHERE
		cq_no = #{cqNo}				
	</update>
</mapper>
