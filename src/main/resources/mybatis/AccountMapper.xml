<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.account.dao.IAccountDAO">
	<resultMap id="account_DB_Result" type="account">
		<result column="account_number" property="accountNumber" />
		<result column="user_id" property="userId" />
		<result column="real_name" property="realName" />
		<result column="type" property="type" />
		<result column="status" property="status" />
		<result column="currency" property="currency" />	
		<result column="amount" property="amount" />
		<result column="frozen_amount" property="frozenAmount" />
		<result column="md5" property="md5" />		
		<result column="create_datetime" property="createDatetime" />	
		<result column="last_order" property="lastOrder" />	
		<result column="system_code" property="systemCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">	
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="realNameQuery != null and realNameQuery != '' ">
				AND t.real_name like "%"#{realNameQuery}"%"
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="currency != null and currency != '' ">
				AND t.currency = #{currency}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
			<if test="lastOrder != null and lastOrder != '' ">
				AND t.last_order = #{lastOrder}
			</if>
			<if test="systemCode != null and systemCode != '' ">
				AND t.system_code = #{systemCode}
			</if>
		</trim>
	</sql>
	
	<select id="select_account" parameterType="account" resultMap="account_DB_Result">
		SELECT
		t.account_number
		,t.user_id
		,t.real_name
		,t.type
		,t.status
		
		,t.currency
		,t.amount
		,t.frozen_amount
		,t.md5
		,t.create_datetime
		
		,t.last_order
		,t.system_code
		FROM
		tstd_account t
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_account_count" parameterType="account" resultType="java.lang.Long">
		SELECT count(1) FROM tstd_account t 
		<include refid="where_condition"/>
	</select>

	<insert id="insert_account" parameterType="account">
		INSERT INTO tstd_account(
		account_number
		,user_id
		,real_name
		,type
		,status
		
		,currency
		,amount
		,frozen_amount
		,md5
		,create_datetime
		,system_code
		)
		VALUES(
		#{accountNumber}
		,#{userId}
		,#{realName}
		,#{type}
		,#{status}
		
		,#{currency}
		,#{amount}
		,#{frozenAmount}
		,#{md5}
		,#{createDatetime}
		,#{systemCode}
		)
	</insert>
	
	<update id="update_realName" parameterType="account">
		UPDATE tstd_account
		SET
		real_name= #{realName}
		WHERE
		account_number = #{accountNumber}
	</update>
	
	<update id="update_account_amount" parameterType="account">
		UPDATE tstd_account
		SET
		amount= #{amount}
		,md5 = #{md5}
		,last_order = #{lastOrder}
		WHERE
		account_number = #{accountNumber}
	</update>
	
	<update id="update_account_frozen_amount" parameterType="account">
		UPDATE tstd_account
		SET
		amount= #{amount}
		,frozen_amount = #{frozenAmount}
		,md5 = #{md5}
		,last_order = #{lastOrder}
		WHERE
		account_number = #{accountNumber}
	</update>
	
	<update id="update_account_status" parameterType="account">
		UPDATE tstd_account
		SET
		status= #{status}
		WHERE
		account_number = #{accountNumber}	
	</update>
</mapper>
