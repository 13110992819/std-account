<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.account.dao.IWithdrawDAO">
	<resultMap id="withdraw_DB_Result" type="withdraw">
		<result column="code" property="code" />
		<result column="to_type" property="toType" />
		<result column="to_code" property="toCode" />
		<result column="to_belong" property="toBelong" />
		<result column="channel" property="channel" />
		
		<result column="type" property="type" />
		<result column="ref_no" property="refNo" />
		<result column="amount" property="amount" />
		<result column="price" property="price" />
		<result column="apply_user" property="applyUser" />	
		
		<result column="create_datetime" property="createDatetime" />
		<result column="status" property="status" />
		<result column="approve_user" property="approveUser" />	
		<result column="approve_note" property="approveNote" />	
		<result column="approve_datetime" property="approveDatetime" />
		
		<result column="pay_user" property="payUser" />	
		<result column="pay_note" property="payNote" />		
		<result column="pay_datetime" property="payDatetime" />
		<result column="pay_fee" property="payFee" />	
		<result column="from_account_number" property="fromAccountNumber" />
		
		<result column="account_number" property="accountNumber" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="toType != null and toType != '' ">
				AND t.to_type = #{toType}
			</if>	
			<if test="toCode != null and toCode != '' ">
				AND t.to_code = #{toCode}
			</if>	
			<if test="channel != null and channel != '' ">
				AND t.channel = #{channel}
			</if>	
			<if test="refNo != null and refNo != '' ">
				AND t.ref_no = #{refNo}
			</if>	
			
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>	
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>
			<if test="payUser != null and payUser != '' ">
				AND t.pay_user = #{payUser}
			</if>
			<if test="fromAccountNumber != null and fromAccountNumber != '' ">
				AND t.from_account_number = #{fromAccountNumber}
			</if>
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>	
			<if test="currency != null and currency != '' ">
				AND ta.currency = #{currency}
			</if>		
		</trim>
	</sql>
	<select id="select_withdraw" parameterType="withdraw" resultMap="withdraw_DB_Result">
		SELECT 
		t.code
	    ,t.to_type	
		,t.to_code
		,t.to_belong
		,t.channel
		
		,t.type
		,t.ref_no
	    ,t.amount
	    ,t.price
	    ,t.fee	
	    
	    ,t.apply_user
		,t.create_datetime
		,t.status
		,t.approve_user
		,t.approve_note
		
		,t.approve_datetime
		,t.pay_user
		,t.pay_note
		,t.pay_datetime			
		,t.from_account_number
		
		,t.account_number
		FROM
		tstd_withdraw t inner join tstd_account ta on t.from_account_number = ta.account_number
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_withdraw_count" parameterType="withdraw" resultType="java.lang.Long">
		SELECT count(1) FROM tstd_withdraw t inner join tstd_account ta on t.from_account_number = ta.account_number
		<include refid="where_condition"/>
	</select>

	<insert id="insert_withdraw" parameterType="withdraw">
		INSERT INTO tstd_withdraw(
		code
		,to_type
		,to_code
		,to_belong
		,channel
		
		,type
		,amount
		,price
		,apply_user
		,create_datetime
			
		,status		
		,from_account_number	
		,account_number	
		)
		VALUES(
		#{code}
		,#{toType}
		,#{toCode}
		,#{toBelong}
		,#{channel}
		
		,#{type}
		,#{amount}
		,#{price}
		,#{applyUser}
		,#{createDatetime}
		
	    ,#{status}
	    ,#{fromAccountNumber}
		,#{accountNumber}
		)
	</insert>

	<update id="update_approve_order" parameterType="withdraw">
		UPDATE tstd_withdraw
		SET
		status= #{status}
		,approve_user= #{approveUser}
		,approve_datetime= #{approveDatetime}		
		,approve_note= #{approveNote}
		WHERE
		code = #{code}					
	</update>
	
	<update id="update_pay_order" parameterType="withdraw">
		UPDATE tstd_withdraw
		SET
		status= #{status}
		,pay_user= #{payUser}
		,pay_note= #{payNote}
		,pay_datetime= #{payDatetime}
		,ref_no= #{refNo}
		,fee= #{fee}
		WHERE
		code = #{code}				
	</update>
</mapper>
