<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.account.dao.IYTOrderDAO">
	<resultMap id="ytOrder_DB_Result" type="ytOrder">
		<result column="yt_no" property="ytNo" />
		<result column="status" property="status" />
		<result column="biz_type" property="bizType" />
		<result column="amount" property="amount" />
		<result column="remark" property="remark" />
		
		<result column="create_datetime" property="createDatetime" />
		<result column="approve_user" property="approveUser" />	
		<result column="approve_datetime" property="approveDatetime" />				
		<result column="account_number" property="accountNumber" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="ytNo != null and ytNo != '' ">
				AND t.yt_no = #{ytNo}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>	
			<if test="bizType != null and bizType != '' ">
				AND t.biz_type = #{bizType}
			</if>				
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>	
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>						
		</trim>
	</sql>
	<select id="select_ytOrder" parameterType="ytOrder" resultMap="ytOrder_DB_Result">
		SELECT 
		yt_no
		,status
		,biz_type
		,amount
		,remark
		
		,create_datetime
		,approve_user
		,approve_datetime		
		,account_number
		FROM
		tli_ytorder t
		<include refid="where_condition"/>
		ORDER BY t.create_datetime
	</select>

	<select id="select_ytOrder_count" parameterType="ytOrder" resultType="java.lang.Long">
		SELECT count(1) FROM tli_ytorder t
		<include refid="where_condition"/>
	</select>

	<insert id="insert_ytOrder" parameterType="ytOrder">
		INSERT INTO tli_ytorder(
		yt_no
		,status
		,biz_type
		,amount
		,remark
		
		,create_datetime	
		,account_number
		)
		VALUES(
		#{ytNo}
		,#{status}	
		,#{bizType}
		,#{amount}	
		,#{remark}	
			
		,#{createDatetime}
		,#{accountNumber}
		)
	</insert>	
	<update id="update_approve_order" parameterType="ytOrder">
		UPDATE tli_ytorder
		SET
		status= #{status}
		,approve_user= #{approveUser}
		,approve_datetime= #{approveDatetime}		
		,remark= #{remark}
		WHERE
		yt_no = #{ytNo}			
	</update>
</mapper>
